<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.wst.common.uriresolver.resolverExtensions">
		<resolverExtension priority="high" stage="prenormalization"
			class="com.alibaba.eclipse.plugin.webx.extension.resolver.SpringExtSchemaResolver" />
	</extension>
	<extension point="org.eclipse.ecf.filetransfer.urlStreamHandlerService">
		<urlStreamHandlerService protocol="springext"
			serviceClass="com.alibaba.eclipse.plugin.webx.extension.resolver.SpringExtURLStreamHandler" />
	</extension>
	<extension point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
		<hyperlinkDetector targetId="org.eclipse.core.runtime.xml"
			id="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.XmlElementHyperlinkDetector"
			name="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.XmlElementHyperlinkDetector"
			class="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.XmlElementHyperlinkDetector" />
		<hyperlinkDetector targetId="org.eclipse.ui.DefaultTextEditor"
			id="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.URLHyperlinkDetector"
			name="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.URLHyperlinkDetector"
			class="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.URLHyperlinkDetector" />
		<hyperlinkDetector targetId="org.eclipse.ui.DefaultTextEditor"
			id="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.JavaHyperlinkDetector"
			name="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.JavaHyperlinkDetector"
			class="com.alibaba.eclipse.plugin.webx.extension.hyperlink.detector.JavaHyperlinkDetector" />
	</extension>
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type base-type="org.eclipse.core.runtime.xml" default-charset="UTF-8"
			id="com.alibaba.eclipse.plugin.webx.configFile" name="%configFileContentTypeName" priority="high">
			<describer class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="{http://www.springframework.org/schema/beans}beans" />
			</describer>
		</content-type>
		<content-type base-type="org.eclipse.core.runtime.properties" default-charset="UTF-8"
			id="com.alibaba.eclipse.plugin.webx.definitionProperitesFile"
			name="%definitionPropertiesFileContentTypeName" file-names="spring.schemas, spring.configuration-points"
			file-extensions="bean-definition-parsers, bean-definition-decorators, bean-definition-decorators-for-attribute"
			priority="high" />
	</extension>
	<extension point="org.eclipse.ui.editors">
		<editor id="com.alibaba.eclipse.plugin.webx.extension.editor.SpringExtConfigurationFileEditor"
			class="com.alibaba.eclipse.plugin.webx.extension.editor.SpringExtConfigurationFileEditor"
			contributorClass="com.alibaba.eclipse.plugin.webx.extension.editor.SpringExtConfigurationFileEditorContributor"
			default="true" icon="icons/springext-config.png" name="%configFileEditorName"
			symbolicFontName="org.eclipse.wst.sse.ui.textfont">
			<contentTypeBinding contentTypeId="com.alibaba.eclipse.plugin.webx.configFile" />
		</editor>
	</extension>
	<extension point="org.eclipse.wst.sse.ui.completionProposal">
		<proposalComputer activate="false" categoryId="org.eclipse.wst.xml.ui.proposalCategory.xmlTags"
			class="com.alibaba.eclipse.plugin.webx.extension.completion.SpringExtXMLCompletionProposalComputer"
			id="com.alibaba.eclipse.plugin.webx.extension.completion.SpringExtXMLCompletionProposalComputer">
			<contentType id="org.eclipse.core.runtime.xml" />
		</proposalComputer>
	</extension>
</plugin>
